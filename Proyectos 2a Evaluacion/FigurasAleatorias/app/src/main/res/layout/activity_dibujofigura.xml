<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <view
            class="com.example.mariiasmiith.figurasaleatorias.Final$FiguraVisualizacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tLBR"
            android:textStyle="bold"
            android:textSize="35px"
            android:text="Lado Base Radio" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tLBR2"
            android:textStyle="bold"
            android:textSize="35px"
            android:text="Lado Base Radio" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tLA"
            android:textStyle="bold"
            android:textSize="35px"
            android:text="Lado  Altura" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tLA4"
            android:textStyle="bold"
            android:textSize="35px"
            android:text="Lado  Altura"  />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tA"
            android:textStyle="bold"
            android:textSize="35px"
            android:text="Area" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tA2"
            android:textStyle="bold"
            android:textSize="35px"
            android:text="Area"  />
    </LinearLayout>

</LinearLayout>